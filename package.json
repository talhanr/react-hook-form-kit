{
    "name": "react-hook-form-kit",
    "version": "1.0.0",
    "description": "Typed, dynamic form component system using React and react-hook-form",
    "author": "Talha Nazir",
    "license": "MIT",
    "homepage": "https://github.com/talhanr/react-hook-form-kit#readme",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "keywords": [
        "react",
        "react-hook-form",
        "form",
        "form validation",
        "form component",
        "form builder",
        "typescript",
        "react form library",
        "typed forms",
        "react components",
        "form hook",
        "custom hook",
        "validation",
        "react forms",
        "form field"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/talhanr/react-hook-form-kit.git"
    },
    "bugs": {
        "url": "https://github.com/talhanr/react-hook-form-kit/issues"
    },
    "scripts": {
        "build": "tsup && rm dist/*.d.mts",
        "typecheck": "tsc --noEmit",
        "dev": "vite --config development/vite.config.ts",
        "preview": "vite preview --config development/vite.config.ts"
    },
    "peerDependencies": {
        "react": ">=17.0.0 <19.0.0",
        "react-dom": ">=17.0.0 <19.0.0",
        "react-hook-form": "^7.0.0"
    },
    "devDependencies": {
        "@hookform/resolvers": "^3.0.0",
        "@types/node": "^22.14.1",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@vitejs/plugin-react": "^4.4.1",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-hook-form": "^7.0.0",
        "tsup": "^7.0.0",
        "vite": "^6.3.2",
        "yup": "^1.0.2"
    },
    "sideEffects": false
}